{
  "name": "firebase-auth-backend",
  "version": "1.0.0",
  "description": "Backend service for Firebase Authentication app",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "tunnel": "concurrently \"npm start\" \"ngrok http 3000\"",
    "tunnel-only": "ngrok http 3000",
    "setup-ngrok": "node setup-ngrok.js",
    "emulators": "firebase emulators:start",
    "emulators:functions": "firebase emulators:start --only functions",
    "test:functions": "node test-functions.js",
    "deploy:functions": "firebase deploy --only functions"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "firebase": "^11.10.0",
    "firebase-admin": "^13.4.0",
    "jsonwebtoken": "^9.0.2",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "concurrently": "^7.6.0"
  },
  "keywords": [
    "firebase",
    "authentication",
    "backend",
    "express"
  ],
  "author": "Your Name",
  "license": "MIT"
}
